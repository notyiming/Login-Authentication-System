<div class="form-row">
    <div class="col-md-6">
        <div class="form-group">
            <label>Name:</label>
            <input readonly class="form-control" name="name" value="<%= userToDisplay.name %>"/>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Username:</label>
            <input readonly class="form-control" name="password" value="<%= userToDisplay.username %>" />
        </div>
    </div>
</div>
<div class="form-row">
    <div class="col-md-6">
        <div class="form-group">
            <label>Email:</label>
            <input readonly class="form-control" name="email" value="<%= userToDisplay.email %>"/>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Role:</label>
            <input readonly class="form-control" name="role" value="<%= userToDisplay.role %>" />
        </div>
    </div>
</div>