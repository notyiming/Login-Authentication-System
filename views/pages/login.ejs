<!DOCTYPE html>
<html>
<%- include('../partials/head'); %>
<form autocomplete="off" action = "/login" method="POST">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                    <div class="card-body">
                        <form>
                            <% if (errorMessage) { %>
                                <h6 class = "errorMessage"><%= errorMessage %></h6>
                            <% } %>
                            <div class="form-group">
                                <label class="small mb-1">Username</label>
                                <input type="text" class="form-control py-4" placeholder="Username *" name="username" id="username" required/>
                            </div>
                            <div class="form-group">
                                <label class="small mb-1">Password</label>
                                <input type="password" class="form-control py-4" placeholder="Password *" name="password" id="password" required/>
                            </div>
                            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                <a class="btn btn-secondary" href="/">Cancel</a>
                                <input type="submit" class="btn btn-primary" value="Login" />
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <div class="small"><a href="/register">Need an account? Sign up!</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
</html>

