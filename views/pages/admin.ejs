<!DOCTYPE html>
<html>
<%- include('../partials/head'); %>
<body>
<%- include('../partials/header'); %>
<div class="app-main">
<h1>Administrative board</h1>
<div class="mb-4 card">
    <div class="card-header">List of accounts</div>
<div class="card-body">
<table class="table table-striped table-bordered table-hover">
    <thead class="">
    <tr>
        <th>Username</th>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th class="d-print-none" style="text-align: center">
            <a class="btn btn-sm btn-success" href="/admin/create">Create new Account</a>
        </th>
    </tr>
    </thead>
    <tbody>
    <% userToDisplay.forEach((userToDisplay) => { %>
        <tr>
            <td><%= userToDisplay.username %></td>
            <td><%= userToDisplay.name %></td>
            <td><%= userToDisplay.email %></td>
            <td><%= userToDisplay.role %></td>
            <td class="d-print-none" style="text-align: center">
                <a class="btn btn-sm btn-primary" href="/admin/view/<%= userToDisplay.username %>">View</a>
                <a class="btn btn-sm btn-warning" href="/admin/edit/<%= userToDisplay.username %>">Edit</a>
                <a class="btn btn-sm btn-danger" href="/admin/delete/<%= userToDisplay.username %>">Delete</a>
            </td>
        </tr>
    <% }); %>
    </tbody>
</table>
</div>
</div>
</div>
</body>
<%- include('../partials/logoutModal'); %>
<%- include('../partials/footer'); %>
</html>